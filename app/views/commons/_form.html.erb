<%= simple_form_for @game do |f| %>
  <%= f.input :my_class, selected: Game.where(user_id: current_profile.id).last.my_class %>
  <%= f.input :opp_class, selected: Game.where(user_id: current_profile.id).last.opp_class %>
  <%= f.input :type_of_a_game, as: :radio_buttons, checked: Game.where(user_id: current_profile.id).last.type_of_a_game %>
  <%= f.input :result, as: :radio_buttons, checked: Game.where(user_id: current_profile.id).last.result %>
  <%= f.input :comment, as: :text, input_html: { size: '40x10' } %>
  <%= f.input :screenshot %>
  <%= f.submit 'Создать', class: 'btn btn-normal' %>
<% end %>
