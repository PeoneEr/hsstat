<%= simple_form_for @game, remote: true do |f| %>
  <%= f.input :my_class, selected: Game.where(user_id: current_profile.id).last.try(:my_class) %>
  <%= f.input :opp_class, selected: Game.where(user_id: current_profile.id).last.try(:opp_class) %>
  <%= f.input :type_of_a_game, as: :radio_buttons, checked: Game.where(user_id: current_profile.id).last.try(:type_of_a_game) %>
  <%= f.input :result, as: :radio_buttons, checked: Game.where(user_id: current_profile.id).last.try(:result) %>
  <%= f.input :comment, as: :text, input_html: { size: '40x10' } %>
  <%= f.input :screenshot %>
  <%= f.submit 'Создать', class: 'btn btn-normal' %>
<% end %>
