<% if profile_signed_in? %>
  <span>Здравствуйте, <%= link_to current_profile.email, profiles_path %></span>
  <%= link_to 'Выйти', destroy_profile_session_path, :method => :delete %>
<% else %>
  <%= link_to 'Войти', new_profile_session_path %> или <%= link_to 'Зарегистрироваться', new_profile_registration_path %>
<% end %>

<table>
  <thead>
    <th>Мой класс</th>
    <th>Класс противника</th>
    <th>Тип</th>
    <th>Результат</th>
    <th>Винрейт</th>
    <th>Дата</th>
    <th></th>
  </thead>
  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= t(game.my_class) %></td>
        <td><%= t(game.opp_class) %></td>
        <td><%= t(game.type_of_a_game) %></td>
        <td><%= t(game.result) %></td>
        <td><%= percentages_for_stat(math_stat(game.my_class, game.opp_class, game.type_of_a_game)) %></td>
        <td><%= time_ago_in_words(game.created_at) %> назад</td>
        <td><%= link_to 'Удалить', game_path(game), method: :delete, data: { confirm: 'Точно удалить?'  } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
